        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/action_background_choice_orange" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choiceColorActionViewRedLayout"
        android:layout_width="fill_parent"
