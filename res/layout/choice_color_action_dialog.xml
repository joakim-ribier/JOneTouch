            android:layout_height="50dp"
            android:background="@color/action_background_choice_purple" >
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/choiceColorActionViewGreenLayout"
        android:layout_width="fill_parent"
