<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/activityMainWidgetLayoutSeparator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@color/action_background_choice_green" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:alpha="0.6"
        android:background="@color/black"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/activityMainWidgetRedirectHomeUrl"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/layout_selector_blue"
            android:clickable="true"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_launcher"
                android:contentDescription="@string/image_content_description" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activityMainWidgetEditActionView"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/layout_selector_blue"
            android:clickable="true"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/view"
                android:contentDescription="@string/image_content_description" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activityMainWidgetExecuteScript"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/layout_selector_blue"
            android:clickable="true"
            android:gravity="right"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/lunch"
                android:contentDescription="@string/image_content_description" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/activityMainWidgetTitleActionLayout"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/action_background_choice_green" >

        <LinearLayout
            android:id="@+id/activityMainWidgetTitleAction"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/layout_selector_blue"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" >

            <TextView
                android:id="@+id/activityMainWidgetTitleActionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/gray23"
                android:textSize="@dimen/_11sp"
                android:textStyle="normal" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:alpha="0.6"
        android:background="@color/black" >
    </RelativeLayout>

</LinearLayout>